<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="@color/font_white">


    <include layout="@layout/layout_highlight_title" />

    <com.fatcloud.account.view.EditView
        android:id="@+id/ev_00_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <com.fatcloud.account.view.EditView
        android:id="@+id/ev_01_id_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <com.fatcloud.account.view.EditView
        android:id="@+id/ev_02_id_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <com.fatcloud.account.view.EditView
        android:id="@+id/ev_03_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <com.fatcloud.account.view.EditView
        android:id="@+id/ev_04_share_ratio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <include layout="@layout/layout_image_upload" />


    <TextView
        android:id="@+id/add_action_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape_stock_red_15"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingRight="12dp"
        android:paddingBottom="8dp"
        android:text="添加股东 + "
        android:textColor="@color/color_app_red"
        android:textSize="@dimen/font_size_12"
        android:visibility="gone"
        tools:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/split_line_color" />
</LinearLayout>