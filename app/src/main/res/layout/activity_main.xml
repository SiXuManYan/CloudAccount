<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--tab显示内容-->
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tabs_navigator"
        android:background="@color/white" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tabs_navigator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_navigation_bar"
        app:tl_textSelectColor="@color/color_app_red"
        app:tl_textUnselectColor="@color/color_second_level"
        app:tl_textsize="10sp" />

</RelativeLayout>