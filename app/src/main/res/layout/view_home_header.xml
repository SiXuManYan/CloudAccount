<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/font_white"
    android:orientation="vertical">

    <com.fatcloud.account.view.banner.BannerSupport
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/transparent"
        app:indicator_drawable_selected="@drawable/shape_white_ring_select"
        app:indicator_drawable_unselected="@drawable/shape_white_ring"
        app:indicator_margin="2dp"
        tools:layout_height="211dp" />


    <LinearLayout
        android:id="@+id/product_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <include layout="@layout/layout_home_split" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/product_0_cv"
                android:layout_width="0dp"
                android:layout_height="112dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/font_white"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/product_0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        tools:src="@tools:sample/avatars" />


                    <TextView
                        android:id="@+id/product_0_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/font_white"
                        android:textSize="@dimen/font_size_14"
                        android:textStyle="bold"
                        tools:text="个体户营业执照" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/product_1_cv"
                android:layout_width="0dp"
                android:layout_height="112dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/font_white"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/product_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        tools:src="@tools:sample/avatars" />


                    <TextView
                        android:id="@+id/product_1_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/font_white"
                        android:textSize="@dimen/font_size_14"
                        android:textStyle="bold"
                        tools:text="企业注册套餐" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/product_3_cv"
                android:layout_width="0dp"
                android:layout_height="112dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/font_white"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/product_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        tools:src="@tools:sample/avatars" />


                    <TextView
                        android:id="@+id/product_3_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/font_white"
                        android:textSize="@dimen/font_size_14"
                        android:textStyle="bold"
                        tools:text="个体户代理记账" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/product_2_cv"
                android:layout_width="0dp"
                android:layout_height="112dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/font_white"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/product_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        tools:src="@tools:sample/avatars" />


                    <TextView
                        android:id="@+id/product_2_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/font_white"
                        android:textSize="@dimen/font_size_14"
                        android:textStyle="bold"
                        tools:text="个体户税务登记" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>


    </LinearLayout>


    <include layout="@layout/layout_home_split2" />


</LinearLayout>