<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_list_gray_background"
    android:orientation="vertical">


    <include layout="@layout/inc_title_bar" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity=""
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_order_detail_progress_top" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_00_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/font_white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/title_00_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_first_level"
                            android:textSize="@dimen/font_size_18"
                            android:textStyle="bold"
                            tools:text="企业营业执照办理" />

                        <TextView
                            android:id="@+id/content_00_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title_00_tv"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/color_third_level"
                            android:textSize="@dimen/font_size_14"
                            tools:text="营业执照办结后可办理" />

                        <TextView
                            android:id="@+id/look_detail_00_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/content_00_tv"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/shape_stock_gray_18"
                            android:paddingLeft="25dp"
                            android:paddingTop="10dp"
                            android:paddingRight="25dp"
                            android:paddingBottom="10dp"
                            android:text="@string/view"
                            android:textColor="@color/color_first_level"
                            android:textSize="@dimen/font_size_12"
                            android:textStyle="bold" />


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_01_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_order_detail_progress_center_gray" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_01_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/font_white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/title_01_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_first_level"
                            android:textSize="@dimen/font_size_18"
                            android:textStyle="bold"
                            tools:text="税务登记" />

                        <TextView
                            android:id="@+id/content_01_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title_01_tv"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/color_third_level"
                            android:textSize="@dimen/font_size_14"
                            tools:text="营业执照办结后可办理" />

                        <TextView
                            android:id="@+id/look_detail_01_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/content_01_tv"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/shape_stock_gray_18"
                            android:paddingLeft="25dp"
                            android:paddingTop="10dp"
                            android:paddingRight="25dp"
                            android:paddingBottom="10dp"
                            android:text="@string/view"
                            android:textColor="@color/color_first_level"
                            android:textSize="@dimen/font_size_12"
                            android:textStyle="bold"
                            android:visibility="invisible"
                            tools:visibility="visible" />


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_02_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_order_detail_progress_center_gray" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_02_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/font_white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/title_02_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_first_level"
                            android:textSize="@dimen/font_size_18"
                            android:textStyle="bold"
                            tools:text="开立银行对公账户" />

                        <TextView
                            android:id="@+id/content_02_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title_02_tv"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/color_third_level"
                            android:textSize="@dimen/font_size_14"
                            tools:text="营业执照办结后可办理" />

                        <TextView
                            android:id="@+id/look_detail_02_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/content_02_tv"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/shape_stock_gray_18"
                            android:paddingLeft="25dp"
                            android:paddingTop="10dp"
                            android:paddingRight="25dp"
                            android:paddingBottom="10dp"
                            android:text="@string/view"
                            android:textColor="@color/color_first_level"
                            android:textSize="@dimen/font_size_12"
                            android:textStyle="bold"
                            android:visibility="invisible"
                            tools:visibility="visible" />


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_03_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_order_detail_progress_end_gray" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_03_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/font_white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/title_03_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_first_level"
                            android:textSize="@dimen/font_size_18"
                            android:textStyle="bold"
                            tools:text="代理记账" />

                        <TextView
                            android:id="@+id/content_03_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title_03_tv"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/color_third_level"
                            android:textSize="@dimen/font_size_14"
                            tools:text="营业执照办结后可办理" />

                        <TextView
                            android:id="@+id/look_detail_04_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/content_03_tv"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/shape_stock_gray_18"
                            android:paddingLeft="25dp"
                            android:paddingTop="10dp"
                            android:paddingRight="25dp"
                            android:paddingBottom="10dp"
                            android:text="@string/view"
                            android:textColor="@color/color_first_level"
                            android:textSize="@dimen/font_size_12"
                            android:textStyle="bold"
                            android:visibility="invisible"
                            tools:visibility="visible" />


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</LinearLayout>